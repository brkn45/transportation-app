<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtVieiwAlert"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start">

  <TextView
      android:id="@+id/TextViewMain"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="96dp"
      android:text="DRIVER"
      android:textColor="#2196F3"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/sEditTextName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="218dp"
      android:width="250dp"
      android:height="50dp"
      android:autoText="false"
      android:ems="10"
      android:hint="Username"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:textAlignment="center"
      android:textColorHint="#03A9F4"
      app:layout_constraintEnd_toEndOf="@+id/TextViewMain"
      app:layout_constraintStart_toStartOf="@+id/TextViewMain"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/sEditTextSurname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:width="250dp"
      android:height="50dp"
      android:autoText="false"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPersonName"
      android:minHeight="48dp"
      android:textAlignment="center"
      android:textColorHint="#03A9F4"
      app:layout_constraintStart_toStartOf="@+id/sEditTextName"
      app:layout_constraintTop_toBottomOf="@+id/sEditTextName" />

  <Button
      android:id="@+id/sBtnsingin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="58dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="86dp"
      android:onClick="singin"
      android:text="Sing Ä°n"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/sBtnsingup"
      app:layout_constraintTop_toBottomOf="@+id/textViewAlert" />

  <Button
      android:id="@+id/sBtnsingup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="83dp"
      android:layout_marginTop="20dp"
      android:onClick="singUp"
      android:text="Sing Up"
      app:layout_constraintEnd_toStartOf="@+id/textViewAlert"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewAlert" />

  <TextView
      android:id="@+id/textViewAlert"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="14dp"
      android:text="TextView"
      android:textColor="#9C27B0"
      android:visibility="invisible"
      app:layout_constraintEnd_toEndOf="@+id/sEditTextSurname"
      app:layout_constraintStart_toStartOf="@+id/sEditTextSurname"
      app:layout_constraintTop_toBottomOf="@+id/sEditTextSurname" />
</androidx.constraintlayout.widget.ConstraintLayout>